{
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "glpi-project/tools": "^0.7",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "7.4.0"
        },
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
